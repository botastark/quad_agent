<?xml version='1.0'?>
<sdf version='1.5'>
<model name="iris_bottom_cam">
    <include>
        <uri>model://iris</uri>
    </include>

    <sensor name="bottom_camera" type="camera">
        <pose>0 0 0 1.5708 0 0</pose> <!-- Example pose for bottom-facing camera -->
        <camera>
            <horizontal_fov>1.047</horizontal_fov> <!-- 60 degrees in radians -->
            <image>
                <width>640</width>
                <height>480</height>
            </image>
            <clip>50.0</clip> <!-- Extend clip distance to 50 meters -->
            <!-- Other camera settings as needed -->
        </camera>
    </sensor>

    <joint name="bottom_camera_joint" type="fixed">
        <child>bottom_camera::link</child>
        <parent>iris::base_link</parent>
        <axis>
            <xyz>0 0 1</xyz>
            <limit>
                <upper>0</upper>
                <lower>0</lower>
            </limit>
        </axis>
    </joint>
</model>

